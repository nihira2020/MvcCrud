<style type="text/css">
    .card {
        width: 60%;
        margin-left: 20%;
        margin-top: 5%
    }
</style>

<div class="card">
    <div class="card-header">
        <h2>Edit Customer</h2>
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Code</label>
                    <input disabled="disabled" value="@ViewData["editcode"]" class="form-control" id="txtcode" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" id="txtname" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" id="txtemail" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>
                        Phone
                    </label>
                    <input class="form-control" id="txtphone" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>
                        Credit Limit
                    </label>
                    <input class="form-control" id="txtcl" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>
                        Is active
                    </label>
                    <input type="checkbox" checked="checked" class="form-check" id="chkactive" />
                </div>
            </div>

        </div>
    </div>
    <div class="card-footer">
        <a onclick="SaveCustomer()" class="btn btn-primary">Save</a>
        <a asp-controller="customer" asp-action="Index" class="btn btn-danger">Back</a>
    </div>


</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">

    $(document).ready(function(){
        var code = $('#txtcode').val();
        var _token = localStorage.getItem('token');
        if(code!='' && code!=null){
            $.ajax({
                type: 'GET',
                url: 'https://localhost:7143/api/Customer/Getbycode?code=' + code,
                headers: {
                    'Authorization': 'bearer ' + _token
                },
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                async: false,
                success: function (data) {
                     if(data!=null){
                       $('#txtname').val(data.name);
                        $('#txtemail').val(data.email);
                        $('#txtphone').val(data.phone);
                        $('#txtcl').val(data.creditlimit);
                        $('#chkactive').prop('checked', data.isActive);
                     }
                },
                failure: function (error) {

                }
            })
        }
    })

    function SaveCustomer() {
        var _token = localStorage.getItem('token');

        var isproceed = true;

        var _code = $('#txtcode');
        var _name = $('#txtname');
        var _email = $('#txtemail');
        var _phone = $('#txtphone');
        var _cl = $('#txtcl');
        var _active = $('#chkactive');

        var code = _code.val();
        var name = _name.val();
        var email = _email.val();
        var phone = _phone.val();
        var cl = _cl.val();
        cl = (cl == '' || cl == null) ? 0 : parseInt(cl);
        var active = _active.prop('checked');

        if (code == null || code == '') {
            _code.css('border-color', 'red');
            isproceed = false;
        } else {
            _code.css('border-color', '#ccc');
        }
        if (name == null || name == '') {
            _name.css('border-color', 'red');
            isproceed = false;
        } else {
            _name.css('border-color', '#ccc');
        }
        if (isproceed) {

            var _obj = new Object();

            _obj.code = code;
            _obj.name = name;
            _obj.email = email;
            _obj.phone = phone;
            _obj.creditlimit = cl;
            _obj.isActive = active;

            $.ajax({
                type: 'PUT',
                url: 'https://localhost:7143/api/Customer/Update?code=' + code,
                headers: {
                    'Authorization': 'bearer ' + _token
                },
                data: JSON.stringify(_obj),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                async: false,
                success: function (data) {
                    debugger;
                    if (data.responseCode == 200) {
                        window.location.href = '/customer';
                        alert('Saved Successfully.')
                    } else {
                        alert('Failed to save')
                    }
                },
                failure: function (error) {

                }
            })

        }


    }
</script>